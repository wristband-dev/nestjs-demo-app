{
  "name": "nestjs-demo-app--server",
  "version": "0.1.0",
  "description": "NestJS server backend that orchestrates API requests from the frontend.",
  "author": "Wristband",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.6.0"
  },
  "scripts": {
    "build": "nest build",
    "debug": "nest start --debug --watch",
    "dev": "nest start --exec \"node --env-file=.env\" --watch",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "prod": "node dist/main",
    "start": "cross-env NODE_ENV=production PORT=6001 nest start",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.9",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.9",
    "@nestjs/platform-express": "^11.1.9",
    "@nestjs/serve-static": "^5.0.4",
    "@wristband/nestjs-auth": "^1.0.0",
    "dotenv": "^16.6.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.14",
    "@nestjs/schematics": "^11.0.9",
    "@types/express": "^5.0.6",
    "@types/node": "^22.19.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "cross-env": "^10.1.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  }
}
